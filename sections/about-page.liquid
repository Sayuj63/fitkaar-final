          <div class="card-images">
            <img loading="lazy" src="{{ '3.1.PNG' | asset_url }}" alt="T-shirt design">
            <img loading="lazy" src="{{ '3.2.PNG' | asset_url }}" alt="Personalized">
            <img loading="lazy" src="{{ '3.3.PNG' | asset_url }}" alt="Custom designs">
          </div>
        </div>
      </div>

      <!-- Card 4 - Right -->
