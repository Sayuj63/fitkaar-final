          <div class="card-images single-image">
            <img loading="lazy" src="{{ '6.1.JPG' | asset_url }}" alt="Reactions">
          </div>
        </div>
      </div>

      <!-- Card 7 - Left -->
      <div class="scrapbook-card card-left">
        <div class="card-inner">
