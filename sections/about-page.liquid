<script>
document.addEventListener('DOMContentLoaded', () => {
  // Add class to body for overflow control
  document.body.classList.add('about-page-active');

  const cards = document.querySelectorAll('.scrapbook-card');
  const centerImage = document.getElementById('center-image');
  const scrapbookSection = document.getElementById('scrapbook-section');

  // Intersection Observer for card animations
  const cardObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, {
    threshold: 0.2,
    rootMargin: "0px 0px -50px 0px"
  });

  cards.forEach(card => cardObserver.observe(card));

  // Parallax effect for center image wrapper (so tapes move with it)
  const centerImageWrapper = document.querySelector('.center-image-wrapper');

  window.addEventListener('scroll', () => {
    if (!scrapbookSection || !centerImageWrapper) return;

    const rect = scrapbookSection.getBoundingClientRect();
    const sectionTop = rect.top;
    const sectionHeight = rect.height;
    const viewportHeight = window.innerHeight;

    // Only apply effect when section is in view
    if (sectionTop < viewportHeight && rect.bottom > 0) {
      const scrollProgress = Math.abs(Math.min(sectionTop, 0)) / (sectionHeight - viewportHeight);
      const clampedProgress = Math.min(Math.max(scrollProgress, 0), 1);

      // Subtle scale effect (image + tapes shrink together)
      const scale = 1 - (clampedProgress * 0.2);
      // Subtle rotation
      const rotate = clampedProgress * 4;

      centerImageWrapper.style.transform = `scale(${scale}) rotate(${rotate}deg)`;
    }
  });
});
</script>

