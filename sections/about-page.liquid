          <div class="card-images">
            <img loading="lazy" src="{{ '5.1.PNG' | asset_url }}" alt="Feedback">
            <img loading="lazy" src="{{ '5.2.PNG' | asset_url }}" alt="Response">
            <img loading="lazy" src="{{ '5.3.PNG' | asset_url }}" alt="Encouragement">
            <img loading="lazy" src="{{ '5.4.PNG' | asset_url }}" alt="Support">
