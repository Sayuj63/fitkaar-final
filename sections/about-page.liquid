  letter-spacing: 0.1em;
}

/* Intro Section */
.about-intro {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem 5% 6rem;
  position: relative;
}

.about-intro::before {
  content: '';
  position: absolute;
  top: -10%;
  left: -5%;
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, rgba(255, 228, 225, 0.6) 0%, transparent 70%);
  border-radius: 50%;
  z-index: -1;
  animation: about-float 6s ease-in-out infinite;
}

.about-intro::after {
  content: '';
  position: absolute;
  bottom: 10%;
  right: -5%;
  width: 250px;
  height: 250px;
  background: radial-gradient(circle, rgba(230, 230, 250, 0.6) 0%, transparent 70%);
  border-radius: 50%;
  z-index: -1;
  animation: about-float 8s ease-in-out infinite reverse;
}

.intro-content {
  display: flex;
  align-items: center;
  gap: 4rem;
  justify-content: space-between;
}

.founder-image-container {
  flex: 1;
  max-width: 45%;
  margin: 0;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.intro-text-container {
  flex: 1;
  text-align: left;
}

.intro-text {
  font-size: 1.5rem;
  margin-bottom: 2rem;
  color: #444;
  font-weight: 600;
}

.founder-img {
  width: 100%;
  height: auto;
  display: block;
}

.founder-desc {
  font-size: 1.1rem;
  color: #555;
  max-width: 700px;
  margin: 0 auto;
}

/* Scroll Story Section */
.scroll-story {
  position: relative;
  background-image: radial-gradient(#e0e0e0 1.5px, transparent 1.5px);
  background-size: 30px 30px;
}

.sticky-container {
  position: sticky;
  top: 0;
  height: 100vh;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
  pointer-events: none;
}

.center-image {
  height: 70vh;
  width: auto;
  max-width: 90vw;
  object-fit: cover;
  border-radius: 8px;
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
  transition: transform 0.1s linear;
  transform-origin: center center;
  will-change: transform;
}

.story-content {
  position: relative;
  z-index: 2;
  margin-top: -50vh;
}

.story-block {
  min-height: 80vh;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 2rem 5%;
  opacity: 0;
  transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  margin-bottom: 5vh;
}

.story-block:nth-child(odd) {
  flex-direction: row;
}

.story-block:nth-child(even) {
  flex-direction: row-reverse;
}

.story-block.left {
  transform: translateX(-50px);
}

.story-block.right {
  transform: translateX(50px);
}

.story-block.visible {
  opacity: 1;
  transform: translateX(0);
}

.block-text {
  flex: 1;
  max-width: 35%;
  padding: 2rem;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10px);
  border-radius: 12px;
  z-index: 5;
  color: #fff;
}

.block-text h2 {
  font-size: 2rem;
  margin-bottom: 0.5rem;
  color: #fff;
}

.block-text p {
  font-size: 1.25rem;
  color: #fff;
  line-height: 1.6;
  font-weight: 400;
}

.block-images {
  flex: 1;
  max-width: 60%;
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  justify-content: center;
  position: relative;
}

.image-grid img {
  width: 140px;
  height: 140px;
  object-fit: cover;
  border-radius: 8px;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease;
}

.image-grid:not(.contain-images) img {
  width: 200px;
  height: 200px;
}

.image-grid:not(.contain-images) img:nth-child(3n+1) {
  width: 220px;
  height: 220px;
}

.image-grid.contain-images img {
  object-fit: contain;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  border-radius: 12px;
  padding: 10px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
}

.image-grid img:nth-child(3n+1) {
  width: 160px;
  height: 160px;
}

.image-grid img:nth-child(odd) {
  transform: rotate(-3deg) translateY(10px);
}

.image-grid img:nth-child(even) {
  transform: rotate(2deg) translateY(-10px);
}

.image-grid img:nth-child(3n) {
  transform: rotate(4deg) scale(1.1);
  z-index: 2;
}

.image-grid img:hover {
  transform: scale(1.1) rotate(0deg);
  z-index: 10;
}

/* Block 5 Specifics */
.story-block.block-5 {
  flex-direction: column !important;
  align-items: stretch;
}

.story-block.block-5 .top-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
