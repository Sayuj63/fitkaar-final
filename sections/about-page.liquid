      </div>
    </div>
  </section>

  <!-- Scrapbook Scroll Section -->
  <section class="scrapbook-section" id="scrapbook-section">
    <!-- Sticky Center Image -->
    <div class="scrapbook-sticky">
      <div class="center-image-wrapper">
        <img src="{{ 'flowing_image.JPG' | asset_url }}" alt="Our Journey" class="center-image" id="center-image">
      </div>
    </div>

    <!-- Story Cards Flow -->
