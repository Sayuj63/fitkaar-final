{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000c5b"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#71b6c8"
    },

    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 80,
      "max": 300,
      "step": 10,
      "label": "Logo Width",
      "default": 180
    },

    {
      "type": "header",
      "content": "Menus"
    },
    { "type": "text", "id": "menu_1_heading", "label": "Menu 1 Heading", "default": "NEED HELP" },
    { "type": "link_list", "id": "menu_1", "label": "Menu 1" },

    { "type": "text", "id": "menu_2_heading", "label": "Menu 2 Heading", "default": "NEED HELP" },
    { "type": "link_list", "id": "menu_2", "label": "Menu 2" },

    { "type": "text", "id": "menu_3_heading", "label": "Menu 3 Heading", "default": "COMPANY" },
    { "type": "link_list", "id": "menu_3", "label": "Menu 3" },

    { "type": "text", "id": "menu_4_heading", "label": "Menu 4 Heading", "default": "COMPANY" },
    { "type": "link_list", "id": "menu_4", "label": "Menu 4" },

    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Heading",
      "default": "We've Got You Covered:"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Description",
      "default": "Beyond the Outfit: Be the first to know about new arrivals, sales & exclusive drops."
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Input Placeholder",
      "default": "your email here"
    },
    {
      "type": "url",
      "id": "newsletter_action",
      "label": "Form Action URL",
      "default": "/contact#contact_form"
    },

    {
      "type": "header",
      "content": "Social Links"
    },
    { "type": "url", "id": "instagram", "label": "Instagram" },
    { "type": "url", "id": "facebook", "label": "Facebook" },
    { "type": "url", "id": "youtube", "label": "YouTube" },
    { "type": "url", "id": "linkedin", "label": "LinkedIn" },
    {
      "type": "range",
      "id": "social_size",
      "label": "Social Icon Size",
      "min": 18,
      "max": 40,
      "step": 2,
      "default": 28
    },

    {
      "type": "header",
      "content": "Tagline"
    },
    {
      "type": "text",
      "id": "tagline_text",
      "label": "Tagline Text",
      "default": "KAPDO ka KALAKAR"
    },
    {
      "type": "range",
      "id": "tagline_size",
      "label": "Tagline Font Size",
      "min": 24,
      "max": 64,
      "step": 2,
      "default": 48
    }
  ]
}
{% endschema %}
