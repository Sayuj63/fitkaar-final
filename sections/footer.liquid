{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000c5b"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}

<footer class="site-footer py-16" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="container grid grid-cols-1 md:grid-cols-4 gap-12">
    
    <!-- Column 1: Logo -->
    <div class="footer-col flex flex-col items-start">
      <div class="mb-6">
        <!-- Logo SVG Simulation based on image -->
        <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="10" y="10" width="80" height="80" fill="white" fill-opacity="0.1"/>
            <path d="M20 20h20v40h-20z" fill="white"/> <!-- Simple white shapes to mimic logo -->
            <path d="M50 20h30v20h-30z" fill="#71b6c8"/>
            <text x="10" y="90" fill="#71b6c8" font-family="Arial" font-weight="bold" font-size="20">FITKAAR</text>
        </svg>
      </div>
    </div>

    <!-- Column 2: Need Help -->
    <div class="footer-col">
      <h3 class="text-sm font-bold uppercase mb-4 opacity-70">Need Help</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="/pages/contact" class="hover:underline">Contact Us</a></li>
        <li><a href="/pages/track-order" class="hover:underline">Track Order</a></li>
        <li><a href="/policies/refund-policy" class="hover:underline">Returns & Refunds</a></li>
        <li><a href="/pages/faq" class="hover:underline">FAQs</a></li>
        <li><a href="/account" class="hover:underline">My Account</a></li>
      </ul>
    </div>

    <!-- Column 3: Company -->
    <div class="footer-col">
        <h3 class="text-sm font-bold uppercase mb-4 opacity-70">Company</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="/pages/about" class="hover:underline">About Us</a></li>
          <li><a href="#" class="hover:underline">Investor Relation</a></li>
          <li><a href="#" class="hover:underline">Careers</a></li>
          <li><a href="#" class="hover:underline">Gift Vouchers</a></li>
          <li><a href="#" class="hover:underline">Community Initiatives</a></li>
        </ul>
    </div>

    <!-- Column 4: Newsletter -->
    <div class="footer-col">
        <h3 class="text-sm font-bold uppercase mb-4">We've Got You Covered:</h3>
        <p class="text-sm mb-4 opacity-80">Beyond the Outfit: Be the first to know about new arrivals, sales & exclusive drops.</p>
        
        <form action="/contact#contact_form" method="post" class="flex">
            <input type="email" placeholder="your email here" class="w-full px-4 py-2 text-black bg-blue-200 rounded-l focus:outline-none" style="background-color: #71b6c8;">
            <button type="submit" class="bg-blue-200 px-4 py-2 rounded-r hover:bg-white transition-colors" style="background-color: #71b6c8;">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-black"><path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </button>
        </form>
    </div>

  </div>

  <div class="container mt-16 pt-8 border-t border-white border-opacity-10 flex flex-col md:flex-row justify-between items-center">
    
    <!-- Social Icons -->
    <div class="flex gap-4 mb-4 md:mb-0">
