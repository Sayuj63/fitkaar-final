{% schema %}
{
  "name": "Hero Slideshow",
  "settings": [
    {
      "type": "range",
      "id": "slide_duration",
      "label": "Slide Duration (seconds)",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Hero Slideshow"
    }
  ]
}
{% endschema %}

<style>
.hero-fade-slideshow {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.hero-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 1s ease-in-out;
}

.hero-slide.active {
  opacity: 1;
}

.hero-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: top center;
}
</style>

<div class="hero-slideshow hero-fade-slideshow" id="heroSlideshow">
  <div class="hero-slide" data-index="0">
    <img src="https://cdn.shopify.com/s/files/1/0716/3373/1756/files/hero.gif?v=1766316556" alt="Fitkaar Hero">
  </div>
  <div class="hero-slide" data-index="1">
    <img src="https://cdn.shopify.com/s/files/1/0716/3373/1756/files/IMG_8039.png?v=1761596590" alt="Fitkaar">
  </div>
  <div class="hero-slide" data-index="2">
    <img src="https://cdn.shopify.com/s/files/1/0716/3373/1756/files/IMG_8040.png?v=1761596590" alt="Fitkaar">
  </div>
  <div class="hero-slide" data-index="3">
    <img src="https://cdn.shopify.com/s/files/1/0716/3373/1756/files/IMG_8041.png?v=1761596590" alt="Fitkaar">
  </div>
  <div class="hero-slide" data-index="4">
    <img src="https://cdn.shopify.com/s/files/1/0716/3373/1756/files/IMG_8042.png?v=1761596591" alt="Fitkaar">
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const slides = document.querySelectorAll('#heroSlideshow .hero-slide');
  const totalSlides = slides.length;
  let currentSlide = 0;
  const duration = {{ section.settings.slide_duration | default: 4 }} * 1000;

  // Show first slide
  if (slides.length > 0) {
    slides[0].classList.add('active');
  }

  // Fade transition function
  function nextSlide() {
    slides[currentSlide].classList.remove('active');
    currentSlide = (currentSlide + 1) % totalSlides;
    slides[currentSlide].classList.add('active');
  }

  // Start infinite loop
  setInterval(nextSlide, duration);
});
</script>
